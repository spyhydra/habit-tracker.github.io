<html>

<head>

    <link rel="stylesheet" href="/css/habit.css">
    <script src="https://kit.fontawesome.com/761d42c757.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">


</head>

<body>
    <div class="navbar1">
        <button type="button" class="btn"><a class="active" href="/users/userhabit">Home</a></button>

        <button type="button" class="btn"><a href="/users/userhabit">Daily</a></button>
    </div>
    <% habits.forEach(details => { %>
    <div class="week-main">
        <div class="habit">
            <P><%= details.content %> </P>




            <% days.forEach(day => { let found = false, status = '';
                details.dates.find(function (item, index) {
                    if(item.date === day.date)
                    {
                        found = true;
                        status = item.complete;
                    }
                });
                %>



            <div class="date">
                <%= day.day + ", " + day.date.slice(-2) %>
                <a href="/habit/status-update-week/?id=<%=details._id%>&date=<%=day.date%>">
                    <% if(found && status==='yes'){ %>
                    <i class="fas fa-check-circle"></i>
                    <% } else if(found && status==='no'){ %>
                    <i class="fas fa-times-circle"></i>
                    <% } else  { %>
                    <i class="fas fa-minus-circle"></i>
                    <% } %>

                </a>
            </div>
            <%})%>

        </div>

    </div>
    <%})%>


</body>

</html>